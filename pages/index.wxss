/* pages/index.wxss */

.container {
  padding-top: 5rpx;
}

.userinfo {
  width: 100%;
  margin-bottom: 5rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  align-items: center;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border: 1px solid;
  border-radius: 75rpx;
}
#openid {
  text-align: center
}
.info {
  width: 100%;
  padding-left: 35%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.lock {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  align-items: center;
}

.lock image {
  width: 80%;
}

.lock .tip {
  width: 100%;
  position: absolute;
  top: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  align-items: center;
  text-align: center;
}
